<?xml version="1.0" encoding="utf-8"?>
<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="#FF7300"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Student Info."
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="19sp"
            android:id="@+id/tvAddItemTitle" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name : "
        android:id="@+id/tvAddName"
        android:layout_marginTop="41dp"

        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""

        android:ems="10"
        android:id="@+id/etAddName"
        android:layout_alignBottom="@+id/tvAddName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address : "
        android:id="@+id/tvAddAddress"
        android:layout_below="@+id/etAddName"
        android:layout_alignLeft="@+id/tvAddName"
        android:layout_alignStart="@+id/tvAddName"
        android:layout_marginTop="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/etAddAddress"
        android:layout_alignBottom="@+id/tvAddAddress"
        android:layout_alignLeft="@+id/etAddName"
        android:layout_alignStart="@+id/etAddName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email : "
        android:id="@+id/tvAddEmail"
        android:layout_below="@+id/tvAddAddress"
        android:layout_alignLeft="@+id/tvAddAddress"
        android:layout_alignStart="@+id/tvAddAddress"
        android:layout_marginTop="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/etAddEmail"
        android:layout_alignBottom="@+id/tvAddEmail"
        android:layout_alignLeft="@+id/etAddAddress"
        android:layout_alignStart="@+id/etAddAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="phone : "
        android:id="@+id/tvAddPhone"
        android:layout_below="@+id/etAddEmail"
        android:layout_alignLeft="@+id/tvAddEmail"
        android:layout_alignStart="@+id/tvAddEmail"
        android:layout_marginTop="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/etAddPhone"
        android:layout_alignBottom="@+id/tvAddPhone"
        android:layout_alignLeft="@+id/etAddEmail"
        android:layout_alignStart="@+id/etAddEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Institution : "
        android:id="@+id/tvAddInstitution"
        android:layout_below="@+id/tvAddPhone"
        android:layout_alignLeft="@+id/tvAddPhone"
        android:layout_alignStart="@+id/tvAddPhone"
        android:layout_marginTop="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/etAddInstitution"
        android:layout_alignBottom="@+id/tvAddInstitution"
        android:layout_alignLeft="@+id/etAddPhone"
        android:layout_alignStart="@+id/etAddPhone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btSave"
        android:onClick="clicked"
        android:layout_below="@+id/etAddInstitution"
        android:layout_alignRight="@+id/etAddInstitution"
        android:layout_alignEnd="@+id/etAddInstitution"
        android:layout_marginTop="47dp" />

</RelativeLayout>
</ScrollView>